# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration (PostgreSQL for Docker)
# Format: postgres://username:password@host:port/database?schema=public
DATABASE_URL=postgres://[YOUR_DB_USERNAME]:[YOUR_DB_PASSWORD]@[YOUR_DB_HOST]:[YOUR_DB_PORT]/[YOUR_DATABASE_NAME]?schema=public
# Shadow database for Prisma migrations (can be same as DATABASE_URL for development)
SHADOW_DATABASE_URL=postgres://[YOUR_DB_USERNAME]:[YOUR_DB_PASSWORD]@[YOUR_DB_HOST]:[YOUR_DB_PORT]/[YOUR_SHADOW_DATABASE_NAME]

# JWT Configuration
# Use a strong, random secret key (minimum 32 characters)
JWT_SECRET=[YOUR_JWT_SECRET_KEY]

# PostgreSQL Configuration (for Docker Compose)
# Database username
POSTGRES_USER=[YOUR_DB_USERNAME]
# Database password
POSTGRES_PASSWORD=[YOUR_DB_PASSWORD]
# Database name
POSTGRES_DB=[YOUR_DATABASE_NAME]

# Redis Configuration (optional)
# Format: redis://host:port or redis://username:password@host:port
REDIS_URL=redis://[YOUR_REDIS_HOST]:[YOUR_REDIS_PORT]

# Application Settings
API_VERSION=v1
